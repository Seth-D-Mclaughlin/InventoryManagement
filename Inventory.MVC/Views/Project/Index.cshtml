@model IEnumerable<Inventory.MODELS.ProjectModels.ProjectListItem>

@{
    ViewBag.Title = "Index";
}
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
<h2>Current Projects</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, htmlAttributes: new { @class = "btn-sm btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }, htmlAttributes: new { @class = "btn-xs btn-warning" }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProjectId }, htmlAttributes: new { @class = "btn-xs btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId }, htmlAttributes: new { @class = "btn-xs btn-danger" })
        </td>
    </tr>
}

</table>
